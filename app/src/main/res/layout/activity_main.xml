<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEKROFILIA"
        android:textSize="60sp"
        android:textColor="@color/zd_green_400"
        android:layout_marginBottom="16dp"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:fontFamily="sans-serif-condensed-black"
        />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zombie Dice"
        android:textSize="18sp"
        android:textColor="@color/zd_gray_400"
        android:layout_marginBottom="64dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nowa gra"
        android:textColor="@color/white"
        app:backgroundTint="@color/zd_green_600"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:cornerRadius="16dp"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rules_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zasady"
        android:textColor="@color/white"
        app:backgroundTint="@color/zd_gray_700"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:cornerRadius="16dp"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WyjÅ›cie"
        android:textColor="@color/zd_gray_400"
        app:backgroundTint="@color/zd_gray_800"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="16dp"/>

</LinearLayout>
