<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.PreGameActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ilu zombie dołącza do uczty?"
        android:textSize="36sp"
        android:textColor="@color/zd_green_400"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="sans-serif-condensed-black"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decrement_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:icon="@drawable/ic_minus"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:padding="0dp"
            app:backgroundTint="@color/zd_gray_700"
            app:cornerRadius="16dp" />

        <TextView
            android:id="@+id/num_players_textview"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:text="2"
            android:textSize="72sp"
            android:textColor="@color/zd_green_400"
            android:gravity="center"
            android:background="@drawable/bg_player_count"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="sans-serif-condensed-black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/increment_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:icon="@drawable/ic_plus"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:padding="0dp"
            app:backgroundTint="@color/zd_gray_700"
            app:cornerRadius="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Powrót"
            app:icon="@drawable/ic_chevron_left"
            android:textColor="@color/white"
            app:backgroundTint="@color/zd_gray_700"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:cornerRadius="16dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textColor="@color/white"
            app:backgroundTint="@color/zd_green_600"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:cornerRadius="16dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
